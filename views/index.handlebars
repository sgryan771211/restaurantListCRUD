<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <div class="text-secondary">
          <div class="card mb-3">
            <a href="/restaurantList/{{this.id}}">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            </a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <div class="text-right">
                <div class="btn-group">
                  <form action="/restaurantList/{{{this.id}}}/delete" method="post">
                    <a href="/restaurantList/{{{this.id}}}/edit"><button type="button"
                        class="btn btn-sm btn-outline-danger">Edit <i class="far fa-edit"></i></button></a>
                    <button type="button submit" class="btn btn-sm btn-outline-danger">Delete <i
                        class="far fa-trash-alt"></i></button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<!-- create button -->
<div class="create-button">
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
    新增餐廳資料 <i class="fas fa-plus-circle"></i>
  </button>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">新增一筆餐廳資料</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/restaurantList" method="POST">
          <div class="form-row">
            <div class="form-group col-6">
              <label for="name">餐廳名稱</label>
              <input type="text" class="form-control" id="name" name="name" placeholder="EX:XXX餐廳">
            </div>

            <div class="form-group col-6">
              <label for="name_en">餐廳英文名稱</label>
              <input type="text" class="form-control" id="name_en" name="name_en" placeholder="EX:XXX restaurant">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-6">
              <label for="category">餐廳類型</label>
              <input type="text" class="form-control" id="category" name="category" placeholder="EX:美式、日式">
            </div>

            <div class="form-group col-6">
              <label for="phone">電話</label>
              <input type="text" class="form-control" id="phone" name="phone" placeholder="EX:02 XXXX XXXX">
            </div>
          </div>

          <div class="form-row">
            <div class="form-group col-8">
              <label for="location">地址</label>
              <input type="text" class="form-control" id="location" name="location" placeholder="EX:北市中正區連雲街 74 號">
            </div>

            <div class="form-group col-4">
              <label for="rating">評分</label>
              <input type="number" step="0.1" min="0" max="5" class="form-control" id="rating" name="rating"
                placeholder="最多5顆星">
            </div>
          </div>

          <div class="form-group">
            <label for="image">餐廳圖片</label>
            <input type="text" class="form-control" id="image" name="image" aria-describedby="emailHelp"
              placeholder="請輸入圖片網址 https://XXX.jpg">
          </div>

          <div class="form-group">
            <label for="google_map">google地圖網址</label>
            <input type="text" class="form-control" id="google_map" name="google_map" placeholder="請輸入google地圖網址">
          </div>

          <div class="form-group">
            <label for="description">文字描述</label>
            <textarea type="text" class="form-control" id="description" name="description"
              placeholder="請輸入這間餐廳的特色"></textarea>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>